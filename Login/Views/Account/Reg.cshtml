@model Login.ViewModel.RegistrarVm


@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] </title>
    <link rel="shortcut icon" type="image/x-icon" href="~/assets\img\profiles\download.jpg">
    <!-- Bootstrap CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <!-- DataTables CSS with Bootstrap 4 integration -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap4.min.css">
    <!-- Other Stylesheets -->
    <link href="~/assets/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <link href="~/assets/css/feathericon.min.css" rel="stylesheet" />
    <link href="~/assets/css/select2.min.css" rel="stylesheet" />
    <link href="~/assets/css/style.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="~/assets/plugins/fontawesome/css/all.css" rel="stylesheet" />
    <link href="~/assets/plugins/fontawesome/css/all.min.css" rel="stylesheet" />
    <!-- Morris CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.css" />
    <!-- SweetAlert2 CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.7.20/sweetalert2.min.css" />
</head>

<body>
    <div class="main-wrapper login-body">
        <div class="login-wrapper">
            <div class="container">
                <div class="loginbox">

                    <div class="login-left"> <img class="img-fluid" src="~/assets/img/profiles/download.jpg" alt="Logo"> </div>
                    <div class="login-right">
                        <div class="login-right-wrap">
                            <h1 class="mb-3">Register</h1>
                            <form asp-action="Reg" asp-controller="Account" method="post">
                                <div class="form-group">
                                    <input class="form-control" asp-for="Name" type="text" placeholder="Name">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" asp-for="Email" type="text" placeholder="Email">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" asp-for="Password" type="text" placeholder="Password">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" asp-for="ConfirmPassword" type="text" placeholder="Confirm Password">
                                </div>
                                <div class="form-group">
                                    <textarea class="form-control" asp-for="Address" type="text" placeholder="Address"></textarea>
                                </div>
                                <div class="form-group mb-0">
                                    <button class="btn btn-primary btn-block" type="submit">Register</button>
                                </div>
                            </form>
                            <div class="text-center dont-have">Already have an account? <a asp-action="Login" asp-controller="Account">Login</a> </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="/assets/js/jquery-ui.min.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <!-- ... -->
    <script src="/assets/js/bootstrap-datetimepicker.min.js"></script>
    <script src="/assets/js/chart.morris.js"></script>
    <script src="/assets/js/moment.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/raphael/2.3.0/raphael.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.min.js"></script>
    <script src="~/assets/js/jquery-ui.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.7.20/sweetalert2.all.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
    <!-- DataTables JavaScript -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <!-- DataTables Bootstrap 4 Integration JavaScript -->
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/assets/js/bootstrap-datetimepicker.min.js"></script>
    <script src="~/assets/js/chart.morris.js"></script>
    <script src="~/assets/js/moment.min.js"></script>
    <script src="~/assets/js/popper.min.js"></script>
    <script src="~/assets/js/select2.min.js"></script>
    <script src="~/assets/plugins/fullcalendar/fullcalendar.min.js"></script>
    <script src="~/assets/plugins/fullcalendar/jquery.fullcalendar.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
    <script src="~/assets/plugins/raphael/raphael.min.js"></script>
    <script src="~/assets/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    <script src="~/assets/plugins/morris/morris.min.js"></script>
    <script src="~/assets/js/script.js"></script>
    <script src="~/js/site.js"></script>
</body>

</html>